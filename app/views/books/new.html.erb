<div class="container">

  <h1>Add a book</h1>

  <%= simple_form_for @book do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <div class="form-group">
      <%= f.input :author_fn,
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :author_ln,
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :title,
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :publishing,
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :grade,
      collection: ["New", "Good as new", "Small superficial damage", "Doesn't look as it would work but it does"],
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :summary,
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :weekly_price,
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :address,
      html: { autocomplete: 'off' },
      class:"form-controls" %>
    </div>

    <div class="form-group">
      <%= f.input :photo,
      class:"form-controls btn-form" %>
    </div>

    <%= f.input :photo_cache, as: :hidden %>

  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: 'btn-form' %>
  </div>

  <% end %>
</div>

<div class="text-center">
  <%= link_to "Revenir Ã  la liste", root_path %>
</div>



</div>
